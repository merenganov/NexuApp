<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo -->
    <solid android:color="@android:color/white" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde gris suave -->
    <stroke
        android:width="1dp"
        android:color="#AAAAAA" />

    <!-- Padding interno -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
